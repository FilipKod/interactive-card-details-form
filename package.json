{
  "name": "card-detail-form",
  "version": "1.0.0",
  "description": "Frontend Mentor - Interactive Card Detail Form solution",
  "main": "index.js",
  "scripts": {
    "sass:dev": "sass --watch --style=expanded ./scss/main.scss ./css/styles.css",
    "ts:watch": "tsc --watch",
    "prefix": "postcss ./css/styles.css --use autoprefixer -d ./css/",
    "sass:prod": "sass --no-source-map --style=compressed scss/main.scss css/styles.css & npm run prefix",
    "uglify-js": "uglifyjs main.js --compress --mangle --output main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sass": "^1.56.1",
    "typescript": "^4.9.5",
    "uglify-js": "^3.17.4"
  }
}
